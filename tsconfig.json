    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "sourceMap": true,

    "outDir": "dist",
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
  },
  "include": [
    "src"
  ]
}
